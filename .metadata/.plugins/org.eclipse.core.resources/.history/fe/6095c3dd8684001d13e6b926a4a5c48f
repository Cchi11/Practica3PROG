package interficieGrafica;
import javax.swing.*;

public class MainGrafic extends JFrame {
	
	private Object[] opcions;

	public MainGrafic() {
		// Demanar dades a l'usuari.
		String [] opcions = {"Registra't", "Ja tinc un compte"};
		int panell = JOptionPane.showOptionDialog(null, 
				"Benvingut! Registra't o ja tens compte", "opcions per entrar", 
				JOptionPane.YES_NO_OPTION, JOptionPane.PLAIN_MESSAGE,
				null, opcions, 
				0);
		
		 setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		 setSize(500, 500);
		 setVisible(true);
	}

	public static void main(String[] args) {
		new MainGrafic();

	}

}
	